green = #00C6A0
grey = #747474



*
    margin 0
    padding 0
    box-sizing border-box
    outline none

body
    font-family: Arial, Helvetica, sans-serif

a
    text-decoration none
    color #999

li
    list-style none

.right
    float right

.left
    float left

.clf
    clear both

.container
    width 960px
    margin 0 auto

.upper_header
    display block
    height 45px
    background-color #1F1F1F
    overflow hidden

.logo
    padding-top 11px

.search
    border-right 1px solid #353535
    display inline-block
    padding-top 11px
    padding-right 22px
    height 45px
    input[type=text]
        border 0
        background-color inherit
        border-bottom 1px solid #999
        color #fff

.login
    display inline-block
    border-right 1px solid #353535
    text-align center
    padding 0 22px
    height 45px
    a
        display block
        margin-top 11px

.lower_header
    display block
    height 60px
    background-color #fff
    overflow hidden

.menu
.right
    overflow hidden
    li 
        display inline-block
        float left
        height 60px
        &:nth-child(4)
            a
                line-height: 16px;
                padding-top: 5px;

        a
            display inline-block
            padding 20px 22px
            border-right 1px solid #eee
            font-size 16px
            color #242424
            text-align center
            transition all .3s ease-out
            &:hover
                background-color #eee
                transition all .3s ease-in
        &:first-child
            border-left 1px solid #eee
.like
.cart
    width 90px
    li
        border-left 0 !important
    a
        padding 20px 0 !important
        display block !important

.fa-star-o
.fa-shopping-cart
    color grey 
    padding-right 10px 

.like_number
.cart_number
    background-color #aeaeae
    color #fff
    font-size 12px
    border-radius 5px
    padding 5px

.cart_number
    background-color green