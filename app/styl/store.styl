.store
    background-color pink
    overflow hidden
    h3
        font-size 24px
        line-height 60px
        font-weight normal
        color greyText
        margin-top 20px

.categories
    display block
    font-size 14px
    line-height 25px
    color #bcb5a7
    border 1px solid #bcb5a7
    width 100px
    height 30px
    text-align center
    margin-top 25px

.row
.row_lower
    overflow hidden
    a
        color greyText
.row_lower
    margin-bottom 20px
    
.col3
    width 300px
    float left
    background-color white
    position relative
    &:nth-child(2)
        margin 0 20px
    &:last-child
        float right
    img
        width 300px
    .price
        position absolute
        bottom 0
        left 10px
        z-index 111

.store_row
    background-color white
    border-top 1px solid #cdcdcd
    position relative
    text-align right
    overflow hidden
    &:hover .good_name
        transform translateY(50px)
        transition all .4s
    a
        padding 10px 10px
        @extend .buttons li a
        background-color white
    &:last-child
        padding-right 32px

#hr
    border 0
    height 1px
    border-top 1px solid #C0B6A8
    margin 20px auto
    clear both

.good_name
    font-size 20px
    font-weight normal
    color black
    background-color white
    position absolute
    bottom 0
    right 0px
    padding 8px 55px
    width 100%
    height 100%
    transition all .4s

.col2
    width 49%
    float left
    background-color #E1DCD5
    color greyText
    padding 10px 20px 30px
    overflow hidden
    &:last-child
        float right
        padding-bottom 10px
    .row:hover h5
        text-decoration underline

    h4
        font-size 14px
        line-height 60px
        text-transform uppercase
        font-weight bold
    p
    cite
        font-size 12px
        line-height 16px
    cite
        &:before
        &:after
            content: ' - '

.date
    width 36px
    height 36px
    background-color green
    color white
    display inline-block
    float left
    font-size 10px
    line-height 12px
    text-transform uppercase
    font-weight bold
    text-align center
    padding-top 6px
    margin-right 10px


